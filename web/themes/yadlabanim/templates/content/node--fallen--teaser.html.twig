<article class="fallen-teaser-node">
  <div{{ content_attributes }}>
    <div class="image">
      <a href="{{ url }}">
        {% if content.field_thumbnail|render %}
          {{ content.field_thumbnail }}
        {% elseif content.field_main_image|render %}
          {{ content.field_main_image }}
        {% else %}
          <div class="field-image"><img src="/themes/yadlabanim/images/default-image-520x400.png" alt="yad labanim logo" /></div>
        {% endif %}
      </a>
    </div>
    <div class="info">
      <h2><a href="{{ url }}">{{ node.field_rank.value }} {{ node.field_first_name.value }} {{ label }} {{"Z\"L"|t }}</a></h2>
      <div class="teaser">
            {% if content.field_date_english|render %}
              <div class="dates">
                <div>{{ "Date of death"|t }} {% if content.field_date_hebrew|render %}{{ node.field_date_hebrew.value }}{% else %}{{ hebrew_date }}{% endif %}</div>
                <div>{{ content.field_date_english['#items'].value|date('U')|format_date('simple') }}</div>   
              </div>
            {% elseif content.field_date_hebrew|render %}
              <div class="dates">{{ "Date of death"|t }} {{ node.field_date_hebrew.value }}</div>
            {% endif %}
      </div>
      <div class="read-flag">
        {{ content.flag_candle }}
        <div class="read-more"><a href="{{ url }}">{{ "To the personal page"|t }}</a></div>
      </div>
    </div>
  </div>
</article>
