<div class="layout-container">
  <header role="banner" class="{% if content_type == "fallen" %}close-side-menu{% endif %}">
    <div class="top-bar only-mobile"> 
      <div id="menu-toggle">
          <div id="hamburger">
            <span></span>
            <span></span>
            <span></span>
          </div>
          <div id="cross">
            <span></span>
            <span></span>
          </div>
      </div>
      <div class="logo">
        <a href="/" rel="home" class="site-logo">
          <img src="/themes/yadlabanim/images/logo-yadlabanim-blue.png" alt="Logo Yad Labanim">
        </a>
      </div>
    </div>
    {% if content_type == "fallen" %}
      <div class="open-close-arrow">
        <img class="open-icon" src="/themes/yadlabanim/images/left-arrow.svg" alt="Open Menu">
        <img class="close-icon hide" src="/themes/yadlabanim/images/right-arrow.svg" alt="Close Menu">
      </div>
    {% endif %}
    <div class="menu-side-wrapper">
      <div class="wrapper">
        <div class="top">
          <div class="logo">
            <a href="/" rel="home" class="site-logo">
              <img src="/themes/yadlabanim/images/logo-yadlabanim.svg" alt="Logo Yad Labanim">
            </a>
          </div>
        </div>
        <div class="center">
          {{ page.menu }}
        </div>
        <div class="bottom">
          <div class="search-button" role="button" tabindex="0">
            <div class="text">{{ "Search"|t }}</div>
          </div>
          <div class="search-area">
            {{ page.search }}
          </div>
        </div>
      </div>
    </div>
  </header>

  
  {% if not logged_in %}
    <div class="lightbox simple">
      <div class="wrapper">
        <div class="close"><img src="/themes/yadlabanim/images/close-popup.png"></div>
        <div class="inside">
          {{ page.message }}
          </div>
      </div>
    </div>
  {% else %}
    {{ page.message }}
  {% endif %}

<main role="main">
  <a id="main-content" tabindex="-1"></a>

  {% if page.sidebar_first %}
    <aside class="layout-sidebar-first" role="complementary">
      {{ page.sidebar_first }}
    </aside>
  {% endif %}
  
  <div class="layout-content">
      {% if not node %}
        {{ page.title }}
      {% endif %}
      {{ page.content_top }}
      {{ page.content }}
      {{ page.content_bottom }}
  </div>{# /.layout-content #}

  {% if page.sidebar_second %}
    <aside class="layout-sidebar-second" role="complementary">
      {{ page.sidebar_second }}
    </aside>
  {% endif %}

</main>
</div>
</div>{# /.layout-container #}
{% if content_type != "fallen" %}
  <footer role="contentinfo">
    <div class="top-footer">
      <div class="width-wrapper">
        <div class="labels">
          <h2>{{ "We are here for you"|t }}</h2>
          <h3>{{ "Fill in your personal information and we will get back to you as soon as possible"|t }}</h3>
        </div>
        {{ page.footer_top }}
      </div>{# /.width-wrapper #}
    </div>
    <div class="bottom-footer">
      <div class="width-wrapper"><div class="wrapper">
        {{ page.footer }}
        <div class="credit">{{ "Powered by" }}<a href="https://comrax.com"><img src="/themes/yadlabanim/images/comrax.png" alt="Comrax"></a></div>
      </div></div>{# /.width-wrapper #}
    </div>
  </footer>
{% endif %}