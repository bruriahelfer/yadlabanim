{%
  set classes = [
    'field',
    'field--name-' ~ field_name|clean_class,
    'field--type-' ~ field_type|clean_class,
    'field--label-' ~ label_display,
    label_display == 'inline' ? 'clearfix',
    'splide__track',
  ]
%}
{%
  set title_classes = [
    'field__label',
    label_display == 'visually_hidden' ? 'visually-hidden',
  ]
%}

<div class="field">
  <div class="field__label">{{ label }}</div>
  {% if items|length > 1 %}  
    <div class="splide fallen-gallery" role="group" aria-label="Image Gallery">
      <div{{ attributes.addClass(classes) }}>
        <ul class="splide__list">
          {% for item in items %}
            <li{{ item.attributes.addClass('splide__slide') }}>{{ item.content }}</li>
          {% endfor %}
        </ul>
      </div>
    </div>
    <div class="splide-counter">
      <span class="current">1</span>/<span class="total">{{ items|length }}</span>
    </div>
  {% else %}
    {% for item in items %}
      <li{{ item.attributes.addClass('splide__slide') }}>{{ item.content }}</li>
    {% endfor %}
  {% endif %}
  </div>
</div>