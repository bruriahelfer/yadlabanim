{% if next_url or end_text %}
  <nav class="pager pager--load-more" aria-labelledby="pagination-heading">
    <h4 id="pagination-heading" class="visually-hidden">{{ 'Pagination'|t }}</h4>
    {% if next_url %}
      <div class="pager__items js-pager__items">
        <div class="pager__item">
          <a href="{{ next_url }}">{{ more_button_text }}</a>
        </div>
      </div>
    {% elseif end_text %}
      <div class="pager__items pager__items--end">
        {{ end_text }}
      </div>
    {% endif %}
  </nav>
{% endif %}
